                           <RadioMenuItem fx:_id="Modena" mnemonicParsing="false" onAction="#setModenaStyleOnAction" selected="true" text="%modena.style" toggleGroup="$styleGroup" />
                       </items>
                     </Menu>
                     <SeparatorMenuItem mnemonicParsing="false" />
                     <CheckMenuItem fx:_id="AlwaysOnTop" mnemonicParsing="false" onAction="#alwaysOnTopOnAction" text="%alwaysOnTom.checkmenuitem" />
                  </items>
             </Menu>
             <Menu fx:_id="helpMenu" mnemonicParsing="false" text="%help.menu">
               <items>
                 <MenuItem fx:_id="AboutApp" mnemonicParsing="false" onAction="#aboutAppOnAction" text="%aboutApp.menuitem" />
               </items>
             </Menu>
           </menus>
         </MenuBar>
          <fx:include fx:_id="topMenuButtons" source="TopMenuButtons.fxml" />
      </VBox>
   </top>
