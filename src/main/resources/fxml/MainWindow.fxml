<BorderPane fx:_id="mainWindow" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pawelszumanski.controllers.MainController">
   <top>
      <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="790.0" BorderPane.alignment="CENTER">
         <MenuBar>
           <menus>
             <Menu fx:_id="fileMenu" mnemonicParsing="false" text="%file.menu">
               <items>
                 <MenuItem fx:_id="closeAppMenuItem" mnemonicParsing="false" onAction="#closeAppOnAction" text="%close.app.menuitem" />
               </items>
             </Menu>
             <Menu fx:_id="setingsMenu" mnemonicParsing="false" text="%settings.menu">
                  <items>
                     <Menu fx:_id="appearanceSubMenu" mnemonicParsing="false" text="%appearance.submenu">
                       <items>
                           <RadioMenuItem fx:_id="Caspian" mnemonicParsing="false" onAction="#setCaspianStyleOnAction" text="%caspian.style">
                              <toggleGroup>
                                 <ToggleGroup fx:_id="styleGroup" />
